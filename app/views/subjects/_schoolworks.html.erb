<div id="schoolwork_list_container" class="section-card h-fit max-h-[500px] flex flex-col">
  <!-- Header -->
  <div class="flex items-center justify-between mb-4">
    <div class="flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
      </svg>
      <h3 class="text-xl font-bold">Related Schoolwork</h3>
    </div>
    <% if subject.present? %>
      <%= link_to schoolworks_path(q: { subject_id_eq: subject.id }), 
          class: "btn btn-sm btn-ghost gap-2" do %>
        View All
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M9 5l7 7-7 7"/>
        </svg>
      <% end %>
    <% end %>
  </div>
  <div class="divider my-2"></div>
  <!-- Schoolwork List -->
  <div class="flex-1 overflow-y-auto">
    <% if subject.present? && subject.schoolworks.any? %>
      <!-- Filter Tabs -->
      <div role="tablist" class="tabs tabs-boxed bg-base-200 mb-4 sticky top-0 z-10">
        <input type="radio" name="schoolwork_tabs" role="tab" class="tab" aria-label="All (<%= subject.schoolworks.count %>)" checked />
        <div role="tabpanel" class="tab-content pt-4">
          <%= render "subjects/schoolwork_list", 
              schoolworks: subject.schoolworks.order(due_date: :asc).limit(10) %>
        </div>
        <% if subject.schoolworks.where.not(status: [:completed, :submitted]).any? %>
          <input type="radio" name="schoolwork_tabs" role="tab" class="tab" aria-label="Active (<%= subject.schoolworks.where.not(status: [:completed, :submitted]).count %>)" />
          <div role="tabpanel" class="tab-content pt-4">
            <%= render "subjects/schoolwork_list", 
                schoolworks: subject.schoolworks.where.not(status: [:completed, :submitted]).order(due_date: :asc).limit(10) %>
          </div>
        <% end %>
        <% if subject.schoolworks.where(status: [:completed, :submitted]).any? %>
          <input type="radio" name="schoolwork_tabs" role="tab" class="tab" aria-label="Completed (<%= subject.schoolworks.where(status: [:completed, :submitted]).count %>)" />
          <div role="tabpanel" class="tab-content pt-4">
            <%= render "subjects/schoolwork_list", 
                schoolworks: subject.schoolworks.where(status: [:completed, :submitted]).order(due_date: :desc).limit(10) %>
          </div>
        <% end %>
      </div>
    <% elsif subject.present? %>
      <!-- Empty State -->
      <div class="flex flex-col items-center justify-center py-12 text-center">
        <div class="w-20 h-20 rounded-full bg-base-200 flex items-center justify-center mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-base-content/30">
            <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
          </svg>
        </div>
        <h4 class="text-lg font-semibold mb-2">No schoolwork yet</h4>
        <p class="text-sm text-base-content/60 mb-4">
          Create your first task for <%= subject.name %>
        </p>
        <%= link_to new_schoolwork_path(schoolwork: { subject_id: subject.id }), 
            class: "btn btn-primary btn-sm gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 5v14M5 12h14"/>
          </svg>
          New Schoolwork
        <% end %>
      </div>
    <% else %>
      <!-- No Subject Selected -->
      <div class="flex items-center justify-center py-12 text-center">
        <p class="text-sm text-base-content/50">
          Select a subject to view related schoolwork
        </p>
      </div>
    <% end %>
  </div>
</div>