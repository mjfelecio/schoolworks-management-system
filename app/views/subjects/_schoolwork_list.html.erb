<div class="space-y-2">
  <% schoolworks.each do |schoolwork| %>
    <%= link_to schoolwork, class: "block" do %>
      <div class="p-3 rounded-lg border border-base-300 hover:border-primary hover:bg-base-200 transition-all group">
        <!-- Title & Type -->
        <div class="flex items-start justify-between gap-2 mb-2">
          <h4 class="font-semibold text-sm group-hover:text-primary transition-colors flex-1 line-clamp-1">
            <%= schoolwork.title %>
          </h4>
          <span class="badge badge-sm badge-outline shrink-0">
            <%= schoolwork.schoolwork_type.titleize %>
          </span>
        </div>
        <!-- Meta Info -->
        <div class="flex items-center gap-3 text-xs text-base-content/60">
          <!-- Due Date -->
          <% if schoolwork.due_date.present? %>
            <div class="flex items-center gap-1">
              <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <span class="<%= 'text-error font-semibold' if schoolwork.overdue? %>">
                <%= schoolwork.due_date.strftime("%b %d") %>
              </span>
            </div>
          <% end %>
          <!-- Status Badge -->
          <span class="badge <%= schoolwork.status_badge_class %> badge-xs">
            <%= schoolwork.status.titleize %>
          </span>
          <!-- Priority Badge -->
          <span class="badge <%= schoolwork.priority_badge_class %> badge-xs">
            <%= schoolwork.priority.titleize %>
          </span>
          <!-- Overdue/Due Soon Indicators -->
          <% if schoolwork.overdue? %>
            <span class="badge badge-error badge-xs">Overdue</span>
          <% elsif schoolwork.due_soon? %>
            <span class="badge badge-warning badge-xs">Due Soon</span>
          <% end %>
        </div>
        <!-- Progress Bar -->
        <div class="mt-3">
          <progress 
            class="progress <%= schoolwork.completed? ? 'progress-success' : 'progress-primary' %> w-full h-1.5" 
            value="<%= schoolwork.progress_percentage %>" 
            max="100">
          </progress>
        </div>
      </div>
    <% end %>
  <% end %>
</div>