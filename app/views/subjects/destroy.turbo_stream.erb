<%= turbo_stream.remove(dom_id(@subject)) %>
<%= turbo_stream.replace("subject_details", partial: "subjects/details_placeholder") %>
<% if @subjects_empty %>
  <%# Last subject deleted - replace list with empty state %>
  <%= turbo_stream.replace "subjects_list" do %>
    <div id="subjects_list_empty">
      <%= render "subjects/no_subjects" %>
    </div>
  <% end %>
<% end %>
<%= turbo_stream.replace("subject_details", partial: "subjects/details_placeholder") %>
<%= turbo_stream.replace("schoolwork_list_container", partial: "subjects/schoolworks_placeholder") %>
<%= render_turbo_flash(:success, "Subject #{@subject.name} #{@was_archived ? "archived" : "deleted"} successfully.") %>
