<%= link_to subject, 
    id: dom_id(subject), 
    data: { turbo_stream: true } do %>
  <li class="group relative px-4 py-3 rounded-lg transition-all duration-200 hover:bg-base-200 hover:shadow-sm cursor-pointer border border-transparent hover:border-base-300">
    <!-- Active Indicator -->
    <div class="absolute left-0 top-1/2 -translate-y-1/2 w-1 h-0 bg-primary rounded-r-full transition-all duration-200 group-hover:h-8"></div>
    <div class="flex items-center gap-3">
      <!-- Subject Icon/Avatar -->
      <div class="avatar placeholder">
        <div class="bg-primary/10 text-primary rounded-lg w-10 h-10">
          <span class="text-lg font-bold"><%= subject.name.first.upcase %></span>
        </div>
      </div>
      <!-- Subject Info -->
      <div class="flex-1 min-w-0">
        <h3 class="font-semibold text-base truncate group-hover:text-primary transition-colors">
          <%= subject.name %>
        </h3>
        <p class="text-xs text-base-content/60 truncate">
          <%= pluralize(subject.schoolworks.count, 'task') %>
          <% if subject.schoolworks.any? %>
            â€¢ <%= subject.schoolworks.where(status: [:completed, :submitted]).count %> completed
          <% end %>
        </p>
      </div>
      <!-- Arrow Icon -->
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-base-content/30 group-hover:text-primary group-hover:translate-x-1 transition-all" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </div>
  </li>
<% end %>