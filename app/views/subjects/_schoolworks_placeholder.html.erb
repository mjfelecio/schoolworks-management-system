<div id="schoolwork_list_container" class="section-card h-fit max-h-[500px] flex flex-col items-center justify-center py-12 text-center">
  <!-- Icon -->
  <div class="w-20 h-20 rounded-full bg-base-200 flex items-center justify-center mb-4">
    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="text-base-content/30">
      <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
    </svg>
  </div>
  <!-- Message -->
  <h4 class="text-lg font-semibold mb-2">No Subjects Yet</h4>
  <p class="text-sm text-base-content/60 mb-4">
    You need to create a subject first before adding schoolwork.
  </p>
  <!-- Action Button -->
  <%= link_to new_subject_path, data: { turbo_frame: "modal_container" }, class: "btn btn-primary btn-sm gap-2" do %>
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M12 5v14M5 12h14"/>
    </svg>
    New Subject
  <% end %>
</div>
