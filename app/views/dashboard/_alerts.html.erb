<% if overdue_count > 0 || due_soon_count > 0 %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
    <!-- Overdue Alert -->
    <% if overdue_count > 0 %>
      <div class="alert alert-error shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div class="flex-1">
          <h3 class="font-bold">Overdue Tasks!</h3>
          <div class="text-xs">You have <%= pluralize(overdue_count, 'overdue task') %></div>
        </div>
        <%= link_to "View", schoolworks_path(q: { due_date_lt: Time.current, status_not_in: ['completed', 'submitted'] }), 
            class: "btn btn-sm btn-ghost" %>
      </div>
    <% end %>
    <!-- Due Soon Alert -->
    <% if due_soon_count > 0 %>
      <div class="alert alert-warning shadow-lg">
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
        <div class="flex-1">
          <h3 class="font-bold">Due Soon</h3>
          <div class="text-xs"><%= pluralize(due_soon_count, 'task') %> due in the next 3 days</div>
        </div>
        <%= link_to "View", schoolworks_path(q: { due_date_gteq: Time.current, due_date_lteq: 3.days.from_now }), 
            class: "btn btn-sm btn-ghost" %>
      </div>
    <% end %>
  </div>
<% end %>