<div id="attachments_list">
  <h3 class="text-lg font-semibold mb-3 flex items-center gap-2">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
      <path d="M15 7l-6.5 6.5a1.5 1.5 0 0 0 3 3l6.5 -6.5a3 3 0 0 0 -6 -6l-6.5 6.5a4.5 4.5 0 0 0 9 9l6.5 -6.5" />
    </svg>
    Attachments (<%= schoolwork.files.count %>)
  </h3>
  <% if schoolwork.files.attached? %>
    <div class="space-y-2">
      <% schoolwork.files.each do |file| %>
        <div class="flex items-center justify-between bg-base-200 p-3 rounded-box">
          <div class="flex items-center gap-3 flex-1 min-w-0">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary flex-shrink-0">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
              <path d="M14 3v4a1 1 0 0 0 1 1h4" />
              <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z" />
            </svg>
            <div class="flex-1 min-w-0">
              <p class="font-medium text-base-content truncate"><%= file.filename %></p>
              <p class="text-sm text-base-content/60"><%= number_to_human_size(file.byte_size) %></p>
            </div>
          </div>
          <div class="flex gap-2">
            <%= link_to rails_blob_path(file, disposition: "attachment"), class: "btn btn-sm btn-ghost" do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M4 17v2a2 2 0 0 0 2 2h12a2 2 0 0 0 2 -2v-2" />
                <path d="M7 11l5 5l5 -5" />
                <path d="M12 4l0 12" />
              </svg>
            <% end %>
            <%= button_to remove_file_schoolwork_path(schoolwork, file_id: file.id), method: :delete, data: { turbo_confirm: "Remove this file?", turbo_frame: "attachments_list" }, class: "btn btn-sm btn-ghost text-error" do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M18 6l-12 12" />
                <path d="M6 6l12 12" />
              </svg>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-base-content/40 text-center py-8">No files attached</p>
  <% end %>
</div>