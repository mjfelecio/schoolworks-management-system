<%= form_with(model: schoolwork, class: "space-y-6") do |form| %>
  <% if schoolwork.errors.any? %>
    <div class="alert alert-error">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
        <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0" />
        <path d="M12 9v4" />
        <path d="M12 16v.01" />
      </svg>
      <div>
        <h3 class="font-bold"><%= pluralize(schoolwork.errors.count, "error") %> prohibited this schoolwork from being saved:</h3>
        <ul class="list-disc list-inside">
          <% schoolwork.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <%# Basic Information Card %>
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-xl mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M9 5h-2a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-12a2 2 0 0 0 -2 -2h-2" />
          <path d="M9 3m0 2a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v0a2 2 0 0 1 -2 2h-2a2 2 0 0 1 -2 -2z" />
        </svg>
        Basic Information
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <%# Subject %>
        <div class="form-control">
          <%= form.label :subject_id, class: "label" do %>
            <span class="label-text font-semibold">
              Subject <span class="text-error">*</span>
            </span>
          <% end %>
          <%= form.collection_select :subject_id, subjects, :id, :name, 
              { prompt: "Select a subject" }, 
              { class: "select select-bordered w-full", required: true } %>
        </div>
        <%# Type %>
        <div class="form-control">
          <%= form.label :schoolwork_type, class: "label" do %>
            <span class="label-text font-semibold">
              Type <span class="text-error">*</span>
            </span>
          <% end %>
          <%= form.select :schoolwork_type, 
              options_for_select(Schoolwork.schoolwork_types.keys.map { |k| [k.titleize, k] }, schoolwork.schoolwork_type), 
              { prompt: "Select type" },
              { class: "select select-bordered w-full", required: true } %>
        </div>
      </div>
      <%# Title %>
      <div class="form-control">
        <%= form.label :title, class: "label" do %>
          <span class="label-text font-semibold">
            Title <span class="text-error">*</span>
          </span>
        <% end %>
        <%= form.text_field :title, 
            class: "input input-bordered w-full", 
            placeholder: "e.g., Chapter 5 Assignment, Final Project Report",
            required: true %>
      </div>
      <%# Description %>
      <div class="form-control">
        <%= form.label :description, class: "label" do %>
          <span class="label-text font-semibold">Description</span>
        <% end %>
        <%= form.text_area :description, 
            class: "textarea textarea-bordered w-full", 
            rows: 4,
            placeholder: "Add any details, instructions, or notes about this schoolwork..." %>
      </div>
    </div>
  </div>
  <%# Schedule & Status Card %>
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-xl mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z" />
          <path d="M16 3v4" />
          <path d="M8 3v4" />
          <path d="M4 11h16" />
        </svg>
        Schedule & Status
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <%# Due Date %>
        <div class="form-control">
          <%= form.label :due_date, class: "label" do %>
            <span class="label-text font-semibold">Due Date <span class="text-error">*</span>
              <span class="font-normal text-base-content/60">(required for certain schoolwork types)</span>
            </span>
          <% end %>
          <%= form.datetime_local_field :due_date, 
              class: "input input-bordered w-full" %>
          <label class="label">
            <span class="label-text-alt text-base-content/60">Leave empty if no due date</span>
          </label>
        </div>
        <%# Status %>
        <div class="form-control">
          <%= form.label :status, class: "label" do %>
            <span class="label-text font-semibold">
              Status <span class="text-error">*</span>
            </span>
          <% end %>
          <%= form.select :status, 
              options_for_select(Schoolwork.statuses.keys.map { |k| [k.titleize, k] }, schoolwork.status), 
              {},
              { class: "select select-bordered w-full", required: true } %>
        </div>
        <%# Priority %>
        <div class="form-control">
          <%= form.label :priority, class: "label" do %>
            <span class="label-text font-semibold">
              Priority <span class="text-error">*</span>
            </span>
          <% end %>
          <%= form.select :priority, 
              options_for_select(Schoolwork.priorities.keys.map { |k| [k.titleize, k] }, schoolwork.priority), 
              {},
              { class: "select select-bordered w-full", required: true } %>
        </div>
        <%# Grade %>
        <div class="form-control">
          <%= form.label :grade, class: "label" do %>
            <span class="label-text font-semibold">Grade (%)</span>
          <% end %>
          <%= form.number_field :grade, 
              class: "input input-bordered w-full",
              min: 0,
              max: 100,
              step: 0.01,
              placeholder: "e.g., 95.5" %>
          <label class="label">
            <span class="label-text-alt text-base-content/60">Enter grade as percentage (0-100)</span>
          </label>
        </div>
      </div>
    </div>
  </div>
  <%# File Attachments Card %>
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-xl mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
          <path d="M15 7l-6.5 6.5a1.5 1.5 0 0 0 3 3l6.5 -6.5a3 3 0 0 0 -6 -6l-6.5 6.5a4.5 4.5 0 0 0 9 9l6.5 -6.5" />
        </svg>
        File Attachments
      </h2>
      <div class="form-control">
        <%# Hidden field to tell rails to keep existing files instead of replacing them %>
        <% schoolwork.files.each do |file| %>
          <%= form.hidden_field :files, multiple: true, value: file.signed_id %>
        <% end %>
        <%= form.label :files, class: "label" do %>
          <span class="label-text font-semibold">Upload Files</span>
        <% end %>
        <%= form.file_field :files, 
            multiple: true,
            accept: ".pdf,.doc,.docx,.ppt,.pptx,.jpg,.jpeg,.png",
            class: "file-input file-input-bordered w-full",
            direct_upload: true %>
        <label class="label">
          <span class="label-text-alt text-base-content/60">
            Accepted: PDF, Word, PowerPoint, Images (max 10MB each)
          </span>
        </label>
      </div>
      <%# Show existing files for edit %>
      <% if schoolwork.persisted? && schoolwork.files.attached? %>
        <div class="mt-4">
          <p class="font-semibold mb-2">Current Files:</p>
          <div class="space-y-2">
            <% schoolwork.files.each do |file| %>
              <div class="flex items-center justify-between bg-base-200 p-3 rounded-box">
                <div class="flex items-center gap-3">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M14 3v4a1 1 0 0 0 1 1h4" />
                    <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z" />
                  </svg>
                  <div>
                    <p class="font-medium"><%= file.filename %></p>
                    <p class="text-sm text-base-content/60"><%= number_to_human_size(file.byte_size) %></p>
                  </div>
                </div>
                <span class="badge badge-success badge-sm">Uploaded</span>
              </div>
            <% end %>
          </div>
          <p class="text-sm text-base-content/60 mt-2">
            Note: You can remove files from the details page after saving
          </p>
        </div>
      <% end %>
    </div>
  </div>
  <%# Form Actions %>
  <div class="flex gap-4 justify-end">
    <%= link_to "Cancel", schoolwork.persisted? ? schoolwork : schoolworks_path, 
        class: "btn btn-ghost" %>
    <%= form.submit schoolwork.persisted? ? "Update Schoolwork" : "Create Schoolwork", 
        class: "btn btn-primary" %>
  </div>
<% end %>