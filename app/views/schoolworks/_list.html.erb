  <%# Schoolworks List %>
<%= turbo_frame_tag "schoolworks_list", class: "w-full divide-y self-start divide-base-300" do %>
  <% if schoolworks.any? %>
    <ul>
      <% schoolworks.each do |schoolwork| %>
        <%= render "schoolwork_item", schoolwork: schoolwork %>
      <% end %>
    </ul>
  <% else %>
    <%= render "no_schoolworks" %>
  <% end %>
<% end %>