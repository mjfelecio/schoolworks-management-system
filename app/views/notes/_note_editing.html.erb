<div id="<%= dom_id(note) %>" class="bg-warning/10 border-2 border-warning p-3 rounded-box">
  <div class="flex items-start gap-2 mb-2">
    <div class="badge badge-warning badge-sm">Editing</div>
  </div>
  <div class="flex items-start justify-between gap-2">
    <p class="text-base-content/50 flex-1 whitespace-pre-wrap line-through"><%= note.content %></p>
  </div>
  <p class="text-xs text-base-content/40 mt-2">
    <%= time_ago_in_words(note.created_at) %> ago
  </p>
</div>